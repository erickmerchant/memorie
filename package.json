{
  "name": "memorie",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "js": "browserify -t [ babelify --presets [ es2015 ] ] js/app.js > static/app.js && uglifyjs static/app.js --compress --mangle --output static/app.js",
    "js-watch": "watchify -t [ babelify --presets [ es2015 ] ] -o static/app.js js/app.js",
    "css": "postcss -u postcss-import -u postcss-url -u postcss-cssnext -u cssnano -d static css/app.css",
    "css-watch": "postcss -u postcss-import -u postcss-url -u postcss-cssnext -d static css/app.css -w",
    "watch": "npm run js-watch & npm run css-watch & nodemon -e js,html --ignore ./compiled/ -r dotenv/config server.js",
    "build": "npm run js && npm run css",
    "test": "standard",
    "serve": "node -r dotenv/config server.js"
  },
  "author": "Erick Merchant <erick.merchant@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "basscss": "^8.0.1",
    "basscss-basic": "^1.0.0",
    "basscss-btn": "^1.1.1",
    "basscss-btn-primary": "^1.1.0",
    "basscss-btn-sizes": "^1.2.0",
    "basscss-forms": "^1.0.0",
    "browserify": "^13.0.0",
    "catch-links": "^2.0.0",
    "colors.css": "^3.0.0",
    "cssnano": "^3.5.2",
    "hyperx": "^2.0.2",
    "main-loop": "^3.2.0",
    "node-pg-migrate": "0.0.9",
    "nodemon": "^1.8.1",
    "path-match": "^1.2.4",
    "postcss-cli": "^2.5.1",
    "postcss-cssnext": "^2.4.0",
    "postcss-import": "^8.0.2",
    "postcss-url": "^5.1.1",
    "single-page": "^1.1.0",
    "standard": "^6.0.4",
    "virtual-dom": "^2.1.1",
    "watchify": "^3.7.0",
    "whatwg-fetch": "^0.11.0"
  },
  "dependencies": {
    "assert-plus": "^1.0.0",
    "atlatl": "^5.2.0",
    "body-parser": "^1.14.2",
    "compression": "^1.6.1",
    "dotenv": "^2.0.0",
    "express": "^4.13.3",
    "morgan": "^1.6.1",
    "pg": "^4.4.3"
  },
  "standard": {
    "ignore": [
      "./static"
    ]
  }
}
