<!DOCTYPE html>
<html lang="en">
  {{> head}}
  <body>
    {{> menu}}
    <main class="container">
      <form class="clearfix" method="post" action="/login/">
        <div class="col col-12 p1">
          <h1>
            Please log in
          </h1>
          {{#error}}
            <div class="bold center p2 mb2 white bg-red rounded">
              {{.}}
            </div>
          {{/error}}
        </div>
        <div class="col col-12 sm-col sm-col-6 p1">
          <label for="name-field">Name</label>
          <input type="text" class="block col-12 mt1 mb2 field" id="name-field" name="name">
        </div>
        <div class="col col-12 sm-col sm-col-6 p1">
          <label for="password-field">Password</label>
          <input type="password" class="block col-12 mt1 mb2 field" id="password-field" name="password">
        </div>
        <div class="col col-12 center p1">
          <button class="btn btn-primary col-6 py2">Log In</button>
        </div>
      </form>
    </main>
  </body>
</html>
